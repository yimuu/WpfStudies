<Window x:Class="Recources.WindowResource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recources"
        mc:Ignorable="d"
        Title="WindowResource" Height="300" Width="300">
    <Window.Resources>
        <ImageBrush x:Key="TileBrush" TileMode="Tile"
                    ViewportUnits="Absolute" Viewport="0 0 32 32"
                    ImageSource="happyface.jpg" Opacity="0.3"/>
    </Window.Resources>

    <StackPanel Margin="5">
        <Button Background="{StaticResource TileBrush}" Padding="5"
                FontWeight="Bold" FontSize="14" Margin="5">A Tiled Button</Button>
        <Button Padding="5" Margin="5"
                FontWeight="Bold" FontSize="14">A Normal Button</Button>
        <Button Background="{StaticResource TileBrush}" Padding="5" Margin="5"
                FontWeight="Bold" FontSize="14">Another Tiled Button</Button>
    </StackPanel>
</Window>
